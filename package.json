  "bugs": {
    "url": "https://github.com/dmelcer9/connect-four-dapp/issues"
  },
  "homepage": "https://github.com/dmelcer9/connect-four-dapp#readme",
  "dependencies": {
    "moment": "^2.20.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "truffle": "^4.0.4",
    "w3-css": "^4.0.4",
    "web3": "^1.0.0-beta.27",
    "zeppelin-solidity": "^1.5.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
